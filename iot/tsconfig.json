{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2022"],
		"esModuleInterop": true,
		"types": ["node"],
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src"]
}
